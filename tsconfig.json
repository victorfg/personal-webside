{
  "compilerOptions": {
    "lib": ["dom", "es6"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "target": "esnext",
    "noEmit": true,
    "esModuleInterop": true,
    "allowJs": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".next"],
  "include": ["**/*.ts", "**/*.tsx"]
}
